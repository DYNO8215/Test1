local ball = Instance.new("Part")  
ball.Shape = Enum.PartType.Ball  
ball.Size = Vector3.new(10, 10, 10)  
ball.Position = Vector3.new(0, 5, 0)  
ball.Anchored = false  
ball.CanCollide = true  
ball.Material = Enum.Material.SmoothPlastic  
ball.Name = "Ball"  
ball.Parent = game.Workspace  

-- **Create Bigger Hitbox**
local hitbox = Instance.new("Part")
hitbox.Size = ball.Size * 1.8  
hitbox.Position = ball.Position
hitbox.Anchored = false  
hitbox.CanCollide = false  
hitbox.Transparency = 1  
hitbox.Name = "BallHitbox"
hitbox.Parent = ball

-- **Attach Hitbox to Ball**
local weld = Instance.new("WeldConstraint")
weld.Part0 = ball
weld.Part1 = hitbox
weld.Parent = ball

-- **Function to Find the Goal and Shoot Accurately**
local function KickToGoal(player)
    local character = player.Character
    if character then
        local root = character:FindFirstChild("HumanoidRootPart")
        if root then
            -- **Find the Goal Automatically**
            local goal = game.Workspace:FindFirstChild("Goal")  -- Make sure the goal is named "Goal"
            if goal then
                local goalPosition = goal.Position + Vector3.new(0, 3, 0)  -- Aim slightly higher
                local kickDirection = (goalPosition - ball.Position).unit  -- Aim towards goal
                local power = 200  -- Adjust kick strength

                local velocity = Instance.new("BodyVelocity")
                velocity.Velocity = kickDirection * power
                velocity.MaxForce = Vector3.new(5000, 5000, 5000)  
                velocity.Parent = ball

                game:GetService("Debris"):AddItem(velocity, 0.3)  
            end
        end
    end
end

-- **Event for Multiplayer**
local remoteEvent = Instance.new("RemoteEvent")
remoteEvent.Name = "KickToGoalEvent"
remoteEvent.Parent = game.ReplicatedStorage

remoteEvent.OnServerEvent:Connect(KickToGoal)

-- **Local Script for Player Input**
local function SetupPlayerInput(player)
    local userInputService = game:GetService("UserInputService")

    userInputService.InputBegan:Connect(function(input, gameProcessed)
        if not gameProcessed and input.UserInputType == Enum.UserInputType.MouseButton1 then
            remoteEvent:FireServer()
        end
    end)
end

game.Players.PlayerAdded:Connect(SetupPlayerInput)
